<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
            android:focusable="true"
android:focusableInTouchMode="true"
    android:background="@color/abc_input_method_navigation_guard">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/gifImageView1"
            android:src="@drawable/proback"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/propic"
            android:src="@drawable/Border_line"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp" />
        <ImageButton
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btnChangePropic"
            android:layout_gravity="center"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="32.5dp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout1">
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="First Name :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:typeface="sans" />
                <EditText
                    android:id="@+id/txtFirstName"
                    android:singleLine="false"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:typeface="sans"
                    android:layout_alignBottom="@+id/textView10"
                    android:textColorHint="#aaa"
                    android:layout_marginLeft="0.0dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:text="xzcnzchzcgzjgfc\gzfzfszfd\gfajgfajs"
                    android:layout_width="230dp"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Last Name :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_alignBottom="@+id/txtFirstName"
                    android:layout_marginLeft="0.0dp" />
                <EditText
                    android:id="@+id/txtLastName"
                    android:singleLine="false"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="230dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:layout_alignBottom="@+id/textView12"
                    android:textColorHint="#aaa"
                    android:layout_marginLeft="0.0dp"
                    android:background="@android:drawable/editbox_background"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="E-Mail :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/textView14"
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="0.0dp" />
                <EditText
                    android:id="@+id/txtEmail"
                    android:singleLine="false"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions|textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.0dp"
                    android:textColor="@android:color/black"
                    android:typeface="sans"
                    android:textColorHint="#aaa"
                    android:background="@android:drawable/editbox_background" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Mobile Number :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:id="@+id/textView14"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="0.0dp" />
                <EditText
                    android:id="@+id/txtMobileNumber"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:singleLine="false"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions|phone"
                    android:typeface="sans"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.0dp"
                    android:textColorHint="#aaa"
                    android:layout_span="2"
                    android:background="@android:drawable/editbox_background"
                    android:phoneNumber="true"
                    android:maxLength="10" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Address :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="0.0dp" />
                <EditText
                    android:id="@+id/txtAddress"
                    android:inputType="textFilter|textMultiLine|textNoSuggestions"
                    android:minLines="5"
                    android:singleLine="false"
                    android:layout_height="48.5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.0dp"
                    android:maxLines="5"
                    android:typeface="sans"
                    android:textColorHint="#aaa"
                    android:layout_span="2"
                    android:background="@android:drawable/editbox_background" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="State :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="0.0dp"
                    android:layout_weight="1"
                    android:id="@+id/textView17"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:layout_height="match_parent" />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:entries="@array/dropdown_arrays"
                    android:layout_marginTop="2dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Prefered Store :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="0.0dp"
                    android:layout_weight="1"
                    android:id="@+id/textView17"
                    android:textSize="15dp"
                    android:layout_gravity="left" />
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:textColor="@android:color/black"
                    android:entries="@array/dropdown_array"
                    android:layout_marginTop="2dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="ZipCode :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/textView17"
                    android:layout_gravity="left" />
                <EditText
                    android:id="@+id/txtZip"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:maxLines="5"
                    android:typeface="sans"
                    android:layout_marginLeft="0.0dp"
                    android:textColorHint="#aaa"
                    android:layout_span="2"
                    android:background="@android:drawable/editbox_background" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Card Number :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/txtcard"
                    android:layout_gravity="left" />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/txtcard1"
                    android:layout_gravity="left" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp">
                <TextView
                    android:text="Expiry Date :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/textView17"
                    android:layout_gravity="left" />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/txtexp"
                    android:layout_gravity="left" />
            </TableRow>
        </TableLayout>
        <Button
            android:text="Update"
            android:layout_width="134.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateButton"
            android:fadingEdge="horizontal"
            style="@style/Animation.AppCompat.Dialog"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#800080"
            android:background="@null" />
    </LinearLayout>
</ScrollView>